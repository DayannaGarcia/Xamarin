<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.Views">
    <ContentPage.Content>
        <StackLayout>
            <Button HorizontalOptions="Center"
                    BackgroundColor="Aquamarine"
                    Text="Enviar"
                    TextColor="Salmon"
                    BorderColor="Aquamarine"
                    BorderWidth="3"
                    FontSize="Large"
                    FontAttributes="Italic"
                    Clicked="btnEnviarClicked"
                    />
            <DatePicker x:Name="dtpFecha"
                        Format="dd/MM/yyyy"
                        />
            <Editor x:Name="edComentario"
                    HeightRequest="100"
                    Text="Escribir aqui"
                    FontAttributes="Bold"
                    FontSize="Large"
                    TextColor="BlueViolet"
                    />
            <Entry Placeholder="Ingrese su password"
                   IsPassword="True"
                   Keyboard="email"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>